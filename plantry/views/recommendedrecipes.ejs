<%- include('../partials/head.ejs'); %>

    <h1>Here's our recommendations!</h1>

    <div class="row">
    <% for (var recipe of recipes) {%>
    <!-- <form action="/user/list/addrecipe" method="post">    -->
    <div class="card" style="width: 18rem; background-color: #d0ddd7;">
        <!-- <img src="..." class="card-img-top" alt="..."> -->
        <div class="card-body">
          <h5 class="card-title"><%=recipe.name%></h5>
          <p class="card-text"><%for (var r of recipe.ingredients) {%><%=r.quantity%> <%=r.food.name%><br><%}%></p>
        </div>
        <div class="card-body">
          <a href=<%=recipe.url%> class="card-link">BBC Recipe link</a>
          <form action="/user/list/addrecipe?name=<%=recipe.name%>" method="post">
            <button type="submit" class="btn btn-primary">Add to shopping list</button>
          </form>
        </div>
      </div> 
    <!-- </form>   -->
    <%}%>  
    </div> 
